{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "connection/connection.ts",
        "interfaces/interfaces.ts",
        "pm/pm.ts",
        "room/events.ts",
        "room/room.ts",
        "room/utils.ts",
        "typings/node/node.d.ts",
        "typings/tsd.d.ts",
        "typings/ws/ws.d.ts"
    ]
}
